
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}
}



<!-- 2. phan search -->
<div class="container search-result my-5">
    <h5>KẾT QUẢ TÌM KIẾM</h5>
    <div class="content-title-line"></div>
    <p><strong>Từ khóa : </strong>" @ViewBag.keyword "</p>
    <div class="d-flex flex-row">
        <div class="form-group">
            <label for="sel1">Lọc theo quốc gia:</label>
            <select class="form-control" id="sel1">
                <option selected>Tất cả</option>
                <option>Mỹ</option>
                <option>Việt Nam</option>
                <option>Hàn Quốc</option>
            </select>
        </div>
        <div class="form-group">
            <label for="sel1">Lọc theo thể loại:</label>
            <select class="form-control" id="sel1">
                <option selected>Tất cả</option>
                <option>Hành động</option>
                <option>Tâm lý</option>
                <option>Tình cảm</option>
            </select>
        </div>
    </div>
</div>
@foreach (var item in ViewBag.result)
{
<div class="col-md-8 offset-2 mt-5">
    <div class="list-film-item">
        <a href="#" class="poster-list" onclick="redirect('profile')">
            <img src="~/images/movie/poster/@item.PosterLink">
        </a>
        <div class="ml-5">
            <div class="filmInfo" onclick="redirect('profile')">
                <a href="#"><h3>@item.MovieName</h3></a>
                <li>@item.MovieLength mins</li>
                <li>Dành cho độ tuổi @item.Rate+ (có hành động thiên hướng bạo lực, ngôn ngữ mạnh, kích động)</li>
                <li>Thể loại: @item.Category</li>
                <li>Đạo diễn: @item.Director</li>
                <li>Diễn viên: @item.Actor</li>
            </div>
            <button class="btn btn-block my-3 col-md-4 offset-4" onclick="redirect('booking')" disabled><i class="fa fa-film" aria-hidden="true"></i> Tình trạng</button>
        </div>
    </div>
</div>
}
