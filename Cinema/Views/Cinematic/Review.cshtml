
@{
    ViewBag.Title = "Bình luận phim";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}

<div class="cinematic-corner-1 x" id="corner1">
    <div class="row">
        <div class="col-md-6 offset-2">
            <div class="mt-4">
                <h5>BÌNH LUẬN PHIM</h5>
                <div class="content-title-line mb-5"></div>
            </div>
            @foreach (var item in ViewBag.listreview)
            {
                <div class="post-item" onclick="redirect('post')">
                    <a href="/Cinematic/DetailPost?id=@item.PostID" class="poster-list">
                        <img src="~/images/post-thumbnail/review/@item.PostThumbnail">
                    </a>
                    <div class="ml-5">
                        <div class="filmInfo">
                            <div class="review-content">
                                <a href="#"><h4>@item.PostTitle</h4></a>
                                <div class="mt-1"><i style="color: rgb(255, 225, 55)" class="fa fa-star" aria-hidden="true"></i> 7.9/10</div>
                                <p>@item.PostDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-horizontal-line my-5"></div>
            }


            @*----------------*@

        </div>
        <div class="col-md-2 mt-4">
            <h5>PHIM ĐANG CHIẾU</h5>
            <div class="content-title-line mb-5"></div>
            <div class="movie-item">
                <img src="~/images/ads/shangchiads.jpg">
                <a href="#"></a>
            </div>
            <div class="movie-title">
                <p>SHANG-CHI AND THE LEGEND OF THE TEN RING</p>
                <p>SHANG-CHI VÀ HUYỀN THOẠI THẬP LUÂN</p>
            </div>
            <div class="movie-item">
                <img src="~/images/ads/aquietplace2ads.jpg">
                <a href="#"></a>
            </div>
            <div class="movie-title">
                <p>A QUIET PLACE</p>
                <p>VÙNG ĐẤT CÂM LẶNG</p>
            </div>
            <div class="movie-item">
                <img src="~/images/ads/satnhantrongguongads.jpg">
                <a href="#"></a>
            </div>
            <div class="movie-title">
                <p>CANDYMAN</p>
                <p>SÁT NHÂN TRONG GƯƠNG</p>
            </div>
        </div>
    </div>
</div>