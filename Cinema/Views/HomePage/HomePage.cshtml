@using Cinema.Models
@model IEnumerable<Cinema.Models.POST>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}



<!-- homepage -->
<div class="homepage x" id="homepage">
    <div id="slider" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0" class="active"></li>
            <li data-target="#slider" data-slide-to="1"></li>
            <li data-target="#slider" data-slide-to="2"></li>
            <li data-target="#slider" data-slide-to="3"></li>
        </ul>
        <div class="carousel-inner" style="background-color: black;">
            <div class="carousel-item active ">
                <img draggable="false" src="~/images/movie/banner/shangchi_banner.png" alt="" class="img-fluid">
            </div>
            <div class="carousel-item ">
                <img draggable="false" src="~/images/movie/banner/inception_banner.jpg" alt="" class="img-fluid">
            </div>
            <div class="carousel-item">
                <img draggable="false" src="~/images/movie/banner/gangstersquad_banner.jpg" alt="">
            </div>
            <div class="carousel-item">
                <img draggable="false" src="~/images/movie/banner/freeguy_banner.jpg" alt="">
            </div>
        </div>
        <a class="carousel-control-prev" href="#slider" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#slider" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <!-- end-nav -->



    <div class="main-1">
        <section class="cd-section cd-section--bg-fixed" style="background-image: url('/public/bgim5.jpg')">
            <div class="max-width-sm">
                <div class="text-component text-center">
                    <div class="movie-selection">
                        <h1 id="title-mv">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i> PHIM HOT <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                        </h1>
                        <div class="list-movie">
                            <div class="carousel" data-flickity='{ "groupCells": true }'>
                                
                                @foreach (var item in ViewBag.movie)
                                {


                                        
                                    <a class="carousel-cell" href="/HomePage/Details?id=@item.MovieID" style="background-image: url('/images/movie/poster/@item.PosterLink')"></a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="main-2 ">

        <div class="container">
            <div class="content-1 row mb-5">

                <div class="review col-md-6 align-items-center">

                    <a href="#"><h5 class="content-title">BÌNH LUẬN PHIM</h5></a>
                    <div class="content-title-line"></div>
                    @foreach (var item in ViewBag.blp)
                    {
                        <div class="review-media mt-5 align-items-center" onclick="redirect('post')">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <a href="#">
                                        <img class="review-thumb img-fluid" src="~/images/post-thumbnail/review/@item.PostThumbnail">
                                    </a>
                                </div>
                                <div class="review-content col-md-6 align-items-center">
                                    <a href="#"><h6>@item.PostTitle</h6></a>

                                    <p>@item.PostDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>


                <div class="blog  col-md-6 ml-3 align-items-center">
                    <a href="#"><h5 class="content-title">BLOG ĐIỆN ẢNH</h5></a>
                    <div class="content-title-line"></div>
                    @foreach (var item in ViewBag.blog)
                    {
                        <div class="blog-media mt-5" onclick="redirect('post')">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <a href="#">
                                        <img class="review-thumb img-fluid" src="~/images/post-thumbnail/blog/@item.PostThumbnail">
                                    </a>
                                </div>
                                <div class=" align-items-center blog-content col-md-6 ">
                                    <a href="#"><h6>@item.PostTitle</h6></a>
                                    <p>@item.PostDescription</p>
                                </div>

                            </div>
                        </div>
                    }

                </div>
            </div>

            <div class="content-2">
                <a href="#"><h5 class="content-title mt-5">TIN KHUYẾN MÃI</h5></a>
                <div class="content-title-line"></div>
                <div class="sales">
                    @foreach (var item in ViewBag.sale)
                    {
                        <div class="sales-container col-md-3 ml-0 mr-3">
                            <img src="~/images/post/sales/@item.PostThumbnail" alt="" class="sales-thumb text-center">
                            <div class="sales-middle">
                                <div class="sales-title">@item.PostTitle</div>
                                <div class="sales-text">@item.PostDescription</div>
                                <button class="btn sales-button">XEM CHI TIẾT</button>
                            </div>
                        </div>
                    }




                </div>
            </div>
        </div>
    </div>

    <div class="quick-buy" id="quick-buy">
        <span id="exit" class="text-light float-right p-1" style="font-size: 20px;position: relative;top: 0;" onclick="collapseQB(2)"> X </span>
        <form class="quick-buy-form">

            <p>ĐẶT VÉ NHANH: </p>

            <select class="select-box">
                <option selected>Chọn tỉnh/thành phố</option>
                <option>TP. Hà Nội</option>
                <option>TP. Hải Phòng</option>
                <option>TP. Đà Nẵng</option>
                <option>TP. Hồ Chí Minh</option>
                <option>TP. Cần Thơ</option>
            </select>
            <select class="select-box">
                <option selected>Chọn rạp</option>
                <option>OREGON Mỹ Đình</option>
                <option>OREGON Tràng Thi</option>
                <option>OREGON Long Biên</option>
                <option>OREGON Hoàng Mai</option>
                <option>OREGON Kim Mã</option>
            </select>
            <select class="select-box">
                <option selected>Chọn phim</option>
                <option>Shang-Chi and the legend of the ten rings</option>
                <option>No time to die</option>
                <option>Free Guy</optionhi>
                <option>Candyman</option>
                <option>Spiderman</option>
            </select>
            <select class="select-box">
                <option selected>Chọn thời gian</option>
                <option>8:00</optionue=>
                <option>10:00</option>
                <option>14:00</optionhi>
                <option>16:00</optionen>
                <option>18:00</optionmai>
            </select>
            <input type="button" class="btn-quick-buy" data-toggle="modal" data-target="#myModal" value="Đặt chỗ" />
        </form>
    </div>
    <button class="btn btn-success fixed-bottom w-100" id="quickbuycol" onclick="collapseQB(1)">Đặt vé nhanh</button>
    <div class="admin">

    </div>
</div>